{
  "compilerOptions": {
    "target": "es5",
    "lib": ["ESNext", "DOM"],
    "outDir": "./dist",
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": false,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": ["src/spec/"]
}
